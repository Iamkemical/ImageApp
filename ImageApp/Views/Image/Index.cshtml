@model ImageApp.Models.ImageServerModel 
<form method="POST" enctype="multipart/form-data" asp-action="Index">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div>
    <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for= "@Model.Name" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Image" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" multiple class="form-control" />
            </div>
        </div>
         <div class="form-group row">
            <div class="col-5 offset-2">
                <input type="submit" class="btn btn-info form-control" value="Submit"/>
            </div>
        </div>
</div>
</form>